<Window x:Class="SpatialAnalysis.Visualization.DebugReporter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" Title="Report" Height="443" Width="606">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Name="lines" SelectionMode="Multiple"/>
        <DockPanel Grid.Row="1" Width="300">
            <Button Content="Close" Name="_btn" HorizontalAlignment="Left"  Height="23" Width="120" Click="_btn_Click"></Button>
            <Button Content="Save" Name="_btnSave" HorizontalAlignment="Right"  Height="23" Width="120" Click="_btnSave_Click"></Button>
        </DockPanel>
        
    </Grid>

</Window>
