        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        Width="319" Loaded="Window_Loaded" ShowInTaskbar="False" 
        ResizeMode="NoResize" Closing="Window_Closing">
    <StackPanel Margin="0,0,0,10">
        <TextBlock Name="title_" FontSize="14" Text="Titleeeee"  HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="0,10"></TextBlock>
        <TextBox HorizontalAlignment= "Center" Margin="0,0,0,10" Name="Number" VerticalAlignment="Center" Width="120" />
        <Button Name="Set" Content="Set Value" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10" Width="120" Click="Set_Click"></Button>
        <TextBlock Name="Description" FontSize="11" Text="Some description................"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,10,0" TextWrapping="Wrap" FontStyle="Italic"/>
    </StackPanel>
</Window>
