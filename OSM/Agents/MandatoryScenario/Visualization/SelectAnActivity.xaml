<Window x:Class="SpatialAnalysis.Agents.MandatoryScenario.Visualization.SelectAnActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="SelectAnActivity" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <TextBlock Name="title"  Margin="10,10,10,5" DockPanel.Dock="Top"
			Text="Select an Activity"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			TextElement.FontSize="20" 
			TextElement.FontWeight="Bold"/>
        <Button Name="_okay" Width="120" Height="25" DockPanel.Dock="Bottom" Margin="7">Continue</Button>
        <ListBox Name="_activities" DockPanel.Dock="Bottom" Margin="5,0,5,0" SelectionMode="Single"></ListBox>
    </DockPanel>
</Window>
