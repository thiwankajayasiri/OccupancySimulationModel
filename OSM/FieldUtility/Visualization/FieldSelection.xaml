<Window x:Class="SpatialAnalysis.FieldUtility.Visualization.FieldSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
        Title="Walkable Field Selection" Height="123" Width="413" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Check the accessibility of the walkable field around the barriers." 
                   Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="20,0" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" ></TextBlock>
        <Button Name="continue" Content="Finalize and Continue" Grid.Column="0" Grid.Row="1" Width="130" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Continue_Click"></Button>
        <Button Name="retry" Content="Reset settings!" Grid.Column="1"  Grid.Row="1" Width="130" VerticalAlignment="Center" HorizontalAlignment="Center" Click="retry__Click"></Button>
        
    </Grid>
</Window>
